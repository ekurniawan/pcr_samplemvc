@model IEnumerable<SampleEF.Models.Negara>

@{
    ViewBag.Title = "SamplePaging";
}

@using X.PagedList.Mvc;
@using X.PagedList;
<link href="/Content/PagedList.css" rel="stylesheet" type="text/css" />


<h2>Sample Paging</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NamaNegara)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NamaNegara)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.NegaraId }) |
            @Html.ActionLink("Details", "Details", new { id=item.NegaraId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.NegaraId })
        </td>
    </tr>
}
</table>

@Html.PagedListPager((IPagedList)Model, page => Url.Action("SamplePaging", new { page }))
